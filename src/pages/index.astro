<script>
	// @ts-nocheck
	const randomString = (n: any, r = "") => {
		while (n--)
			r += String.fromCharCode(
				((r = (Math.random() * 62) | 0) as any, (r += r > 9 ? (r < 36 ? 55 : 61) : 48) as any)
			);
		return r;
	};

	const unscramble = (el: any): any => {
		const chars = [...el.dataset.scramble];
		const tot = chars.length;

		let iteration = 0;
		let ch = 0;
		let solved = "";

		el._itv = setInterval(() => {
			if (iteration > 10) {
				iteration = 0;
				solved += chars[ch];
				ch += 1;
			}

			el.textContent = randomString(tot - ch, solved);

			if (ch === tot) {
				clearInterval(el._itv);
			}
			iteration += 1;
		}, 10);
	};
	document.addEventListener("DOMContentLoaded", () => {
		const el = document.getElementById("scramble");
		if (el) {
			unscramble(el);
		}
	});
</script>
