---
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import ManagementTeam from "@/assets/management-team.png";
const meta = {
	description: "I'm a starter theme for Astro.build",
	title: "About",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Interest - Life</h1>

		<ul>
			<li>Video Games</li>
			<li>Sci-Fi Films</li>
			<li>Tech and Machines...</li>
		</ul>
		<!--EU EUFLAG -->
		<div class="flex flex-grow flex-col rounded-2xl bg-[#ebebeb] py-6 dark:bg-[#333] md:p-8">
			<div class="flex flex-grow flex-col justify-evenly gap-8 p-4 md:justify-between md:p-0">
				<div class="flex flex-col justify-center gap-8">
					<div class="flex flex-col gap-2">
						<div class="flex flex-row items-center md:flex-col md:items-start md:gap-2">
							<Image
								class="-translate-x-1"
								loading="lazy"
								src={ManagementTeam}
								width="40"
								height="40"
								alt={"Magament team"}
							/>
							<h1 class="text-2xl">I like EU and EU Flag</h1>
						</div>
					</div>
				</div>
				<iframe
					loading="lazy"
					class="rounded-2xl drop-shadow-md"
					width="100%"
					height="278"
					src="https://www.youtube-nocookie.com/embed/opL4u_gi5VY?controls=1&rel=0"
					title="YouTube video player"
					frameborder="0"
					allow=""
					allowfullscreen=""></iframe>
			</div>
		</div>
		<!--DEUTSCH -->
		<div class="flex flex-grow flex-col rounded-2xl bg-[#ebebeb] py-6 dark:bg-[#333] md:p-8">
			<div class="flex flex-grow flex-col justify-evenly gap-8 p-4 md:justify-between md:p-0">
				<div class="flex flex-col justify-center gap-8">
					<div class="flex flex-col gap-2">
						<div class="flex flex-row items-center md:flex-col md:items-start md:gap-2">
							<Image
								class="-translate-x-1"
								loading="lazy"
								src="/src/assets/management-team.png"
								width="40"
								height="40"
								alt={"mag"}
							/>
							<h1 class="text-2xl">I like EU and EU Flag</h1>
						</div>
					</div>
				</div>
				<img
					src="/src/assets/made-in-germany-icon.png"
					class="rounded-2xl object-cover drop-shadow-md"
				/>
			</div>
		</div>
		<h2 class="font-medium">Photos</h2>
		<h1>I like Eu and EU FLag</h1>
		<p>
			Clone or fork my <a
				aria-label="github repository"
				class="x-link inline-block"
				href="https://github.com/chrismwilliams/astro-x"
				rel="noopener noreferrer"
				target="_blank">repo</a
			> if you like me!
		</p>
	</div>
</PageLayout>
